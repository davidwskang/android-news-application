<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_drawer_menu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    >

    <ImageButton
        android:id="@+id/left_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_trending_up_black_35dp"
        android:padding="12dp"
        android:background="@color/transparent"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="@string/empty_string"
        />

    <TextView
        android:id="@+id/header_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintStart_toEndOf="@id/left_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:text="@string/action_bar_headlines_title"
        android:textSize="22sp"
        android:textColor="@color/charcoal"
        android:lines="1"
        />

    <EditText
        android:id="@+id/search_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_icon"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:background="#00000000"
        android:textSize="22sp"
        android:textColor="@color/charcoal"
        android:labelFor="@id/header_text"
        android:maxLines="1"
        android:maxLength="20"
        android:lines="1"
        android:inputType="text"
        app:boxBackgroundMode="none"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:imeOptions="actionSearch"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/right_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_more_horiz_black_35dp"
        android:padding="12dp"
        android:background="@color/transparent"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="@string/empty_string"
        />

</androidx.constraintlayout.widget.ConstraintLayout>