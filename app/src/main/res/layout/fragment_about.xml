<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_drawer_menu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <View
        android:id="@+id/about_action_bar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/light_grey"
        />

    <ImageView
        android:id="@+id/about_action_bar_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="@id/about_action_bar_background"
        app:layout_constraintTop_toTopOf="@id/about_action_bar_background"
        app:layout_constraintBottom_toBottomOf="@id/about_action_bar_background"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_back_black_35dp"
        />

    <TextView
        android:id="@+id/about_action_bar_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintStart_toEndOf="@id/about_action_bar_icon"
        app:layout_constraintTop_toTopOf="@id/about_action_bar_background"
        app:layout_constraintBottom_toBottomOf="@id/about_action_bar_background"
        android:layout_marginStart="8dp"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:text="@string/action_bar_about"
        android:textSize="22sp"
        android:textColor="#444444"
        android:lines="1"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/about_description"
        />

    <TextView
        android:id="@+id/google_api_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:text="@string/about_google_link"
        />

</androidx.constraintlayout.widget.ConstraintLayout>